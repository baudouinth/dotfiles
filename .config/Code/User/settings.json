{
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "jupyter.askForKernelRestart": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": false,
    "debug.openDebug": "openOnDebugBreak",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true
    },
    "autoDocstring.docstringFormat": "numpy",
    "editor.suggestSelection": "first",
    "python.languageServer": "Pylance",
    "python.linting.flake8Enabled": true,
    "git.enableSmartCommit": true,
    "jupyter.themeMatplotlibPlots": true,
    "window.autoDetectColorScheme": true,
    "workbench.iconTheme": "vscode-icons",
    "explorer.autoReveal": false,
    "workbench.startupEditor": "newUntitledFile",
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "update.mode": "none",
    "files.watcherExclude": {
        "**/*-env/**": true,
        "**/data/**": true
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "latex-utilities.message.update.show": false,
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "rewrap.autoWrap.enabled": false,
    "diffEditor.wordWrap": "off",
    "terminal.external.linuxExec": "konsole",
    "redhat.telemetry.enabled": false,
    "dart.checkForSdkUpdates": false,
    "git.terminalAuthentication": false,
    "http.proxyAuthorization": null,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontFamily": "'Fira Code', 'Hack', 'Droid Sans Mono', 'monospace', 'FontAwesome'",
    "git.autofetch": true,
    "git.confirmSync": false,
    "workbench.colorTheme": "Monokai Night",
    "vsicons.dontShowNewVersionMessage": true,
    "git.ignoredRepositories": [
        "gear"
    ],
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "window.menuBarVisibility": "toggle",
    "python.linting.mypyEnabled": true,
    "notebook.output.textLineLimit": 10000,
    "editor.inlayHints.enabled": "off",
    "debug.onTaskErrors": "showErrors",
    "pandoc.pdfOptString": "--pdf-engine=xelatex",
    "python.analysis.autoImportCompletions": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
}