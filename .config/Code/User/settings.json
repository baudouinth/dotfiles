{
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
    },
    "jupyter.askForKernelRestart": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": false,
    "debug.openDebug": "openOnDebugBreak",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
    },
    "[zig]": {
        "editor.formatOnSave": false,
        "editor.formatOnType": false,
    },
    "autoDocstring.docstringFormat": "numpy",
    "editor.suggestSelection": "first",
    "python.languageServer": "Pylance",
    "python.linting.flake8Enabled": true,
    "git.enableSmartCommit": true,
    "jupyter.themeMatplotlibPlots": true,
    "window.autoDetectColorScheme": true,
    "explorer.autoReveal": false,
    "workbench.startupEditor": "newUntitledFile",
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "update.mode": "none",
    "files.watcherExclude": {
        "**/*-env/**": true,
        "**/data/**": true
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.formatOnType": true,
    "latex-utilities.message.update.show": false,
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "rewrap.autoWrap.enabled": false,
    "diffEditor.wordWrap": "off",
    "terminal.external.linuxExec": "konsole",
    "redhat.telemetry.enabled": false,
    "dart.checkForSdkUpdates": false,
    "git.terminalAuthentication": false,
    "http.proxyAuthorization": null,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontFamily": "'Fira Code', 'Hack', 'Droid Sans Mono', 'monospace', 'FontAwesome'",
    "git.autofetch": true,
    "git.confirmSync": false,
    "workbench.colorTheme": "Monokai Night",
    "vsicons.dontShowNewVersionMessage": true,
    "git.ignoredRepositories": [
        "gear"
    ],
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "window.menuBarVisibility": "toggle",
    "python.linting.mypyEnabled": true,
    "notebook.output.textLineLimit": 10000,
    "editor.inlayHints.enabled": "off",
    "debug.onTaskErrors": "showErrors",
    "python.analysis.autoImportCompletions": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
    "code-runner.executorMapByFileExtension": {
        ".md": "fish -c 'pandoc-gen $fileName' > $fileNameWithoutExt.pdf"
    },
    "code-runner.ignoreSelection": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "pasteImage.basePath": "${projectRoot}",
    "pasteImage.path": "${projectRoot}/img",
    "pasteImage.showFilePathConfirmInputBox": true,
    "pasteImage.filePathConfirmInputBoxMode": "onlyName",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.format.semicolons": "insert",
    "zig.zls.path": "/home/baudouin/.config/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
}
